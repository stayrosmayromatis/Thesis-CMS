{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vuetify","web-bluetooth","vite/client"],
    "paths": {
      "@/*": ["src/*"],
      "@/enums/*":["src/enums/*"],
      "@/components/*":["src/components/*"],
      "@/composables/*":["src/composables/*"],
      "@/models/*":["src/models/*"],
      "@/store/*":["src/store/*"],
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ]
}
